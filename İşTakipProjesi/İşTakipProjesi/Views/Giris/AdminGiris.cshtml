
@{
    Layout = null;
}
<title>Admin Girişi</title>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<style>
    .error-message {
        color: red;
        margin-top: 10px;
    }
</style>
<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                @using (Html.BeginForm("AdminGiris", "Giris", FormMethod.Post))
                {
                    <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                        <h3>Admin Girişi</h3>
                    </div>
                    <br />
                    <div class="form-outline mb-4">
                        <input name="KullaniciAdi" type="text" id="form3Example3" class="form-control form-control-lg"
                               placeholder="Kullanıcı Adı Girin " required />
                        <label class="form-label" for="form3Example3">Kullanıcı Adı</label>
                    </div>
                    <div class="form-outline mb-3">
                        <input name="Sifre" type="password" id="form3Example4" class="form-control form-control-lg"
                               placeholder="Şifre Giriniz." required />
                        <label class="form-label" for="form3Example4">Şifre</label>
                    </div>
                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Giriş Yap
                        </button>
                    </div>
                    <div class="error-message">
                        @Html.ValidationSummary(true)
                    </div>
                }
                <a href="/Giris/PersonelGiris">Personel Girişi</a>
            </div>
        </div>
    </div>
    <div class="d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-4 px-4 px-xl-5 bg-primary">
        <div class="text-white mb-3 mb-md-0">
            Copyright © 2023. All rights reserved.
        </div>
    </div>
</section>