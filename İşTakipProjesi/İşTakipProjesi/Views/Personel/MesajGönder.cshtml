@{
    ViewBag.Title = "MesajGönder";
    Layout = "~/Views/Shared/PersonelLayout.cshtml";
}


<title>Mesaj Gönder</title>
<div class="card mx-lg-" style="margin-top:5%; max-width:800px; margin-left:22%;">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Mesaj Gönder</h5>
        <small class="text-muted float-end">İletişim</small>
    </div>
    <div class="card-body">
        <form method="post">
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-info">
                    @ViewBag.Message
                </div>
            }
            <div class="form-group">
                <label>Gönderilecek Kişi</label>
                <select class="form-control" name="GönderilecekKisi" required>
                    <option value="">Sorumlu Personel Seçiniz</option>
                    @foreach (var gönderilecek_kisi in ViewBag.GönderilecekKişi)
                    {
                        <option value="@gönderilecek_kisi.AdiSoyadi">@gönderilecek_kisi.AdiSoyadi</option>
                    }
                </select>
            </div>
            <div class="mb-4">
                <label class="form-label" for="basic-icon-default-fullname">Sorumlu Personel</label>
                <div class="input-group input-group-merge">
                    <span id="basic-icon-default-fullname2" class="input-group-text">
                        <i class="bx bx-user"></i>
                    </span>
                    <input value="@Session["adsoyad"]" name="GönderenKisi" type="text"
                           class="form-control"
                           id="basic-icon-default-fullname"
                           placeholder="Sorumlu Personel Giriniz"
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="basic-icon-default-company">Konu</label>
                <div class="input-group input-group-merge">
                    <span id="basic-icon-default-company2" class="input-group-text">
                        <i class="bx bx-buildings"></i>
                    </span>
                    <input type="text" name="Konu" required
                           id="basic-icon-default-company"
                           class="form-control"
                           placeholder="Konu Giriniz."
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="basic-icon-default-message">Mesaj</label>
                <div class="input-group input-group-merge">
                    <span id="basic-icon-default-message2" class="input-group-text">
                        <i class="bx bx-comment"></i>
                    </span>
                    <textarea id="basic-icon-default-message"
                              class="form-control" name="Mesaj"
                              placeholder="Mesaj Giriniz."></textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Gönder</button>
        </form>
    </div>
</div>
