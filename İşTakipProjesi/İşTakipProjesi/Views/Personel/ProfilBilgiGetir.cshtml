
@{
    ViewBag.Title = "ProfilBilgiGetir";
    Layout = "~/Views/Shared/PersonelLayout.cshtml";
}

@model İşTakipProjesi.Models.Baglantisql.Personel

<title>Profil</title>
<div class="card mx-lg-" style="margin-top:5%; max-width:800px; margin-left:22%;">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Profil Güncelle</h5>
        <small class="text-muted float-end">İletişim</small>
    </div>
    <div class="card-body">
        @if (!string.IsNullOrEmpty(ViewBag.MessageGüncelle))
        {
            <div class="alert alert-info">
                @ViewBag.MessageGüncelle
            </div>
        }
        @using (Html.BeginForm("ProfilGüncelle", "Personel", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.ID, new { @class = "form-control" })
            <div class="mb-4">
                <label class="form-label" for="basic-icon-default-fullname">Ad Soyad</label>
                <div class="input-group input-group-merge">
                    <span id="basic-icon-default-fullname2" class="input-group-text">
                        <i class="bx bx-user"></i>
                    </span>
                    @Html.TextBoxFor(m => m.AdSoyad, new { @class = "form-control" })
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="basic-icon-default-company">E-Mail</label>
                <div class="input-group input-group-merge">
                    <span id="basic-icon-default-company2" class="input-group-text">
                        <i class="bx bx-mail-send"></i>
                    </span>
                    @Html.TextBoxFor(m => m.Eposta, new { @class = "form-control" })
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="basic-icon-default-company">Kullanıcı Adı</label>
                <div class="input-group input-group-merge">
                    <span id="basic-icon-default-company2" class="input-group-text">
                        <i class="bx bx-happy"></i>
                    </span>
                    @Html.TextBoxFor(m => m.KullaniciAdi, new { @class = "form-control" })
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="basic-icon-default-company">Şifre</label>
                <div class="input-group input-group-merge">
                    <span id="basic-icon-default-company2" class="input-group-text">
                        <i class="bx bx-label"></i>
                    </span>
                    @Html.TextBoxFor(m => m.Sifre, new { @class = "form-control" })
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Gönder</button>
        }
    </div>
</div>
