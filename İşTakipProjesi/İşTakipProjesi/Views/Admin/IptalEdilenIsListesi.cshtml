@using İşTakipProjesi.Models.Baglantisql
@model List<İsTakip>
@{
    ViewBag.Title = "İptalEdilenİşListesi";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style>
    #dataTable.dataTable.no-footer {
        border-bottom: 1px solid white;
    }
</style>
<title>İptal Edilen İş Listesi</title>
<link href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" rel="stylesheet" />
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <h5 class="card-header">İptal Edilen İş Listesi</h5>
        <div class="table-responsive text-nowrap">
            <table id="dataTable" class="table">
                <thead>
                    <tr>
                        <th>İŞ ID</th>
                        <th>SORUMLU PERSONEL</th>
                        <th>TALEP EDEN</th>
                        <th>KONU</th>
                        <th>DEPARTMAN</th>
                        <th>MODÜL</th>
                        <th>TARİH</th>
                        <th>DURUM</th>
                        <th>DOSYA</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var veri in Model)
                    {
                    <tr>
                        <th>@veri.ID</th>
                        <td>@veri.SorumluPersonel</td>
                        <td>@veri.TalepEden</td>
                        <td>@veri.Konu</td>
                        <td>@veri.Departman</td>
                        <td>@veri.Modul</td>
                        <td>@veri.Tarih</td>
                        <td>@veri.Durum</td>
                        <td>
                            @if (!string.IsNullOrEmpty(veri.Dosya))
                            {
                                <a href="@Url.Content("~/Uploads/" + veri.Dosya)" class="btn btn-primary">Download</a>
                            }
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            <a class="btn btn-outline-primary" href="/Admin/YeniİşKaydı">Yeni İş Kaydı Ekle</a>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script>
        jQuery(document).ready(function ($) {
            $('#dataTable').DataTable();
        });
    </script>
}
